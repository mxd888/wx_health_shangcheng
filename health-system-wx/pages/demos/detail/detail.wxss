  align-items: center;
 background: white;
}
.topbar .select{
 
  font-size: 28rpx;

  padding-bottom: 15rpx;
   margin-left: 50rpx;
  /* color:rgb(187, 183, 183); */
 color:rgb(29, 27, 27);
 font-weight: bold;
  opacity: 0.3;
   transition: opacity  0.2s linear;
  

 

}
.topbar  .tapbar_active{
  
  position: relative;
  z-index: 0;
  opacity:1;
  /* animation: move 0.2s linear;
  animation-fill-mode:forwards; */
   border-bottom: 4rpx solid black;
  
   border-bottom-right-radius: 2rpx;

}


.topbar  .tapbar_active::before{
  content: '';
  display: block;
  position: absolute;
   width:40rpx;
  height:6rpx;
  background-color: white;
  top:99%;
  
  z-index: 1;
  
}
.topbar  .tapbar_active::after{
  content: '';
  display: block;
  position: absolute;
   width:40rpx;
  height:6rpx;
  background-color: white;
  top:99%;
  left: 100%;
  transform: translateX(-100%);
  z-index: 1;
}
